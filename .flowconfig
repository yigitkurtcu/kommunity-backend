[ignore]
.*/node_modules/.*
.*/coverage/.*
.*/test/.*
.*/scripts/.*

[include]

[libs]
./src/lib
[lints]
all=error

[options]
all=true
module.name_mapper='^\$/\(.*\)$' -> '<PROJECT_ROOT>/src/\1'
module.ignore_non_literal_requires=true

[strict]
nonstrict-import
unclear-type
unsafe-getters-setters
untyped-import
untyped-type-import
